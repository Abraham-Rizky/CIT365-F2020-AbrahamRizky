@page
@model MyScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Home";
}

<h2>
    <i class="material-icons">home</i>&nbsp;@ViewData["Title"]
</h2>


<p>
    <a asp-page="Create" class="sortLink">Add new note</a>
</p>
<form>
    <p>
        <select asp-for="ScriptureBook" asp-items="Model.Book">
            <option value="">All</option>
        </select>
        &nbsp;Keyword: <input type="text" asp-for="SearchString" />
    </p>
    <p>
        <input type="submit" value="Filter" />
        <a asp-page="./Index" asp-route-sortOrder="" asp-route-SearchString="" class="button">Reset</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort" class="sortLink">
                    @Html.DisplayNameFor(model => model.Scripture[0].Book)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Notes)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort" class="sortLink">
                    @Html.DisplayNameFor(model => model.Scripture[0].Date)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Scripture)
        {
            <tr>
                <td class="nowrap">
                    @Html.DisplayFor(modelItem => item.Book)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chapter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verse)
                </td>
                <td class="wraptext">
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td class="nowrap resetwrap">
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit|</a>
                    <a asp-page="./Details" asp-route-id="@item.ID">Details|</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
